<?xml version="1.0" encoding="UTF-8"?>
<project name="jdiff" default="jdiff_report" basedir=".">

  <target name="jdiff_report" depends="">
    <!-- Set these variables. -->
    <property name="JDIFF_HOME" value=".../jdiff-1.1.1" />
    <property name="MAVEN_REPOSITORY_HOME" value=".../.m2/repository" />
    <property name="PROJECT_ROOT_DIR" value=".../google-api-java-client" />
    <property name="JAVADOC_PROJECT_ROOT_DIR" value=".../javadoc" />
    <property name="OLD_PROJECT_ROOT_DIR" value="/tmp/google-api-java-client" />

    <taskdef name="jdiff" classname="jdiff.JDiffAntTask"
      classpath="${JDIFF_HOME}/antjdiff.jar:${MAVEN_REPOSITORY_HOME}/org/codehaus/jackson/jackson-core-asl/1.6.5/jackson-core-asl-1.6.5.jar:${MAVEN_REPOSITORY_HOME}/xpp3/xpp3/1.1.4c/xpp3-1.1.4c.jar" />
    <jdiff destdir="${JAVADOC_PROJECT_ROOT_DIR}/1.4-alpha/jdiff" verbose="on"
      stats="on" docchanges="on">
      <old name="Google API Client Library for Java 1.3-alpha">
        <!-- This is the location of your old source files -->
        <dirset dir="${OLD_PROJECT_ROOT_DIR}/google-api-client/src"
          includes="com/**" />
      </old>
      <new name="Google API Client Library for Java 1.4-alpha">
        <!-- This is the location of your new source files -->
        <dirset dir="${PROJECT_ROOT_DIR}/google-api-client/src/main/java" />
        <dirset dir="${PROJECT_ROOT_DIR}/google-api-client-extensions/src/main/java" />
        <dirset dir="${PROJECT_ROOT_DIR}/google-api-client-googleapis/src/main/java" />
      </new>
    </jdiff>
  </target>

</project>
